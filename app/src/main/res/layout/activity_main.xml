<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1">

    <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
        android:id="@+id/rela2"
    android:layout_width="wrap_content"
    android:layout_height="258dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="0dp"
        android:layout_marginTop="20dp">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_message_70dp"
        android:background="@color/menu"
        android:layout_marginLeft="100dp" />
    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_assignment_24dp1"
        android:background="@color/menu"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="130dp" />
    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_70dp"
        android:background="@color/menu"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="130dp" />
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account_circle_70dp"
        android:background="@color/menu"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="130dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Selanjutnya"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageButton1"
        android:layout_toStartOf="@+id/textView7"
        android:layout_toLeftOf="@+id/textView7"
        android:singleLine="false"
        android:clickable="false"
        android:layout_marginTop="5dp" />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_speaker_notes_24dp"
        android:background="@color/menu" />
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_receipt_70dp"
            android:background="@color/menu"
            android:layout_marginLeft="200dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Lengkap"
            android:id="@+id/textView7"
            android:layout_below="@+id/imageButton1"
            android:layout_alignRight="@+id/imageButton1"
            android:layout_alignEnd="@+id/imageButton1"
            android:layout_alignLeft="@+id/imageButton1"
            android:layout_alignStart="@+id/imageButton1"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tugas Besok"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageButton3"
            android:layout_alignLeft="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton3"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tugas Lengkap"
            android:id="@+id/textView9"
            android:layout_below="@+id/imageButton1"
            android:singleLine="false"
            android:clickable="false"
            android:layout_marginTop="135dp"
            android:layout_alignRight="@+id/imageButton4"
            android:layout_alignEnd="@+id/imageButton4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Tugas"
            android:id="@+id/textView10"
            android:singleLine="false"
            android:clickable="false"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignLeft="@+id/imageButton5"
            android:layout_alignStart="@+id/imageButton5"
            android:layout_alignRight="@+id/imageButton5"
            android:layout_alignEnd="@+id/imageButton5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/textView11"
            android:singleLine="false"
            android:clickable="false"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignLeft="@+id/imageButton6"
            android:layout_alignStart="@+id/imageButton6"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>

</LinearLayout>